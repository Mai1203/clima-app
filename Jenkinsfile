pipeline {
    agent any

    stages {
        stage('Inicio') {
            steps {
                echo '¡Pipeline iniciado correctamente!'
            }
        }
        stage('Construcción') {
            steps {
                echo 'Ejecutando fase de construcción...'
            }
        }
        stage('Final') {
            steps {
                echo 'Pipeline finalizado con éxito.'
            }
        }
    }
}
